<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" />

    <padding
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    <corners android:radius="10dp" />
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#1B1B1B" />

        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="10px"
        android:left="10px"
        android:right="10px"
        android:top="10px">
        <shape android:shape="rectangle" >
            <solid android:color="#171717" />

        </shape>
    </item>
</shape>